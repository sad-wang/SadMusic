@import "../../app.wxss";
.container {
    height: 100vh;
    padding: 0 65rpx;
    background: linear-gradient(#343a3f 0%, #181a1d 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    position: relative;
}
.container .navigation{
    height: 100rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    color: #878b8e;
    font-size: 26rpx;
}
.container .navigation .song{
    text-align: center;
}
.container .navigation .song .song-name{
    color: #aaabac;
    font-size: 26rpx;
    font-weight: bolder;
}
.container .navigation .song .song-singer{
    color: #75787b;
    font-size: 24rpx;
}
.container .main{
    flex: 1;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}
.container .main swiper{
    width: 580rpx;
    height: 580rpx;
}
.container .main swiper swiper-item .rolling{
    width: 580rpx;
    height: 580rpx;
    border-radius: 26rpx;
    border: solid #1d2124;
    border-top-color: #25292e;
    border-left-color: #2a2d33;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat, repeat-y;
}
.container .main swiper swiper-item .lyrics {

}
.container .options{
    display: flex;
    flex-direction: row;
    height: 150rpx;
    align-items: center;
    justify-content: center;
    width: 100%;
}
.container .options .options-inner{
    margin: 0 40rpx;
    width: 80rpx;
    height: 80rpx;
}
.container .actions{
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    margin-bottom: 60rpx;
}
.container .actions .actions-inner{
    width: 120rpx;
    height: 120rpx;
}
.liked{
    color: #e23c3c
}
