<view class="container">
    <view class="head">
        <view class="title">
            <view class="name">{{title}}</view>
            <view class="info">{{subtitle}}</view>
        </view>
        <div class="heart">
            <div class="heart-solid icon"></div>
        </div>
    </view>
    <scroll-view enable-flex scroll-y class="lists">
        <view class="lists-item" wx:for="{{songLists}}" wx:key="key" wx:for-item="item">
            <view class="item-id">{{index+1}}</view>
            <view class="item-content">
                <view class="song-name">{{item.song_name}}</view>
                <view class="singer">{{item.singer}}</view>
            </view>
            <view class="item-play"></view>
        </view>
    </scroll-view>
</view>
<view class="playing">
    <view class="song">
        <view class="song-name">Lose It</view>
        <view class="song-singer">Flume Â· Vic Mensa</view>
    </view>
    <view class="actions">
        <view class="last"></view>
        <view class="play"></view>
        <view class="next"></view>
    </view>
</view>