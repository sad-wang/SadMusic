<view class="container">
    <view class="head">
        <view class="title">
            <view class="name">{{title}}</view>
            <view class="info">{{subtitle}}</view>
        </view>
        <view class="icon-wrapper heart">
            <view class="iconfont icon-heart" style="color: #e23c3c"></view>
        </view>
    </view>
    <scroll-view enable-flex scroll-y class="lists">
        <view class="lists-item" wx:for="{{songLists}}" wx:key="key" wx:for-item="item">
            <view class="item-id">{{index+1}}</view>
            <view class="item-content">
                <view class="song-name">{{item.song_name}}</view>
                <view class="singer">{{item.singer}}</view>
            </view>
            <view class="icon-wrapper item-play">
                <view class="iconfont icon-play icon-style"></view>
            </view>
        </view>
    </scroll-view>
</view>
<view class="playing">
    <view class="song" >
        <view class="song-name">Lose It</view>
        <view class="song-singer">Flume Â· Vic Mensa</view>
    </view>
    <view class="actions">
        <view class="icon-wrapper actions-inner">
            <view class="iconfont icon-previous icon-style"></view>
        </view>
        <view class="icon-wrapper actions-play button-play">
            <view class="iconfont icon-pause icon-style" style="color: #fdf0ec"></view>
        </view>
        <view class="icon-wrapper actions-inner">
            <view class="iconfont icon-next icon-style"></view>
        </view>
    </view>
</view>